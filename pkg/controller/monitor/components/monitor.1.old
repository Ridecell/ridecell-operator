package components

import (
	"encoding/base64"
	"fmt"

	monitoringv1beta1 "github.com/Ridecell/ridecell-operator/pkg/apis/monitoring/v1beta1"
	"github.com/Ridecell/ridecell-operator/pkg/components"
	"github.com/golang/glog"
	alertmconfig "github.com/prometheus/alertmanager/config"
	"gopkg.in/yaml.v2"
	"k8s.io/apimachinery/pkg/runtime"
)

type monitorComponent struct {
}

func NewMonitor() *monitorComponent {
	return &monitorComponent{}
}

func (_ *monitorComponent) WatchTypes() []runtime.Object {
	return []runtime.Object{}
}

func (_ *monitorComponent) IsReconcilable(_ *components.ComponentContext) bool {
	return true
}

func (comp *monitorComponent) Reconcile(ctx *components.ComponentContext) (components.Result, error) {
	glog.Info("here")
	fmt.Println("monitor")
	instance := ctx.Top.(*monitoringv1beta1.Monitor)
	rules, _ := yaml.Marshal(instance.Spec.MetricAlertRules)
	extras := map[string]interface{}{}
	fmt.Println(string(rules))
	extras["alerts"] = string(rules)
	res, _, err := ctx.CreateOrUpdate("prometheus_rule.yml.tpl", extras, func(goalObj, existingObj runtime.Object) error {
		goal := goalObj.(*monitoringv1beta1.Monitor)
		existing := existingObj.(*monitoringv1beta1.Monitor)
		// Copy the Spec over.
		existing.Spec = goal.Spec
		return nil
	})
	fmt.Println(err, res)

	// work on on notification

	// slack config
	slackconfigs := []*alertmconfig.SlackConfig{}
	//routes := []*alertmconfig.Route{}
	fmt.Println(instance.Spec.Notify.Slack)
	for _, channel := range instance.Spec.Notify.Slack {
		// add chanel
		slackconfigs = append(slackconfigs, &alertmconfig.SlackConfig{
			NotifierConfig: alertmconfig.NotifierConfig{
				VSendResolved: false,
			},
			Channel:   channel,
			Title:     `'{{ template "slack.monzo.title" . }}'`,
			IconEmoji: `'{{ template "slack.monzo.icon_emoji" . }}'`,
			Color:     `'{{ template "slack.monzo.color" . }}'`,
			Text:      `'{{ template "slack.monzo.text" . }}'`})

		fmt.Println(slackconfigs)
	}
	// resss := []*alertmconfig.Receiver{}
	ro := &alertmconfig.Receiver{
		Name:         instance.Name,
		SlackConfigs: slackconfigs,
	}
	routes := &alertmconfig.Route{
		Receiver:   instance.Name,
		Continue:   true,
		GroupByStr: []string{"namespace"},
		Match: map[string]string{
			"namespace": instance.Namespace,
		},
	}

	//resss = append(resss, ro)
	marshled, err := yaml.Marshal(routes)
	fmt.Println(err, "route marshled", string(marshled))
	extras = map[string]interface{}{}
	extras["routes"] = base64.StdEncoding.EncodeToString(marshled)
	marshled, err = yaml.Marshal(ro)
	extras["receiver"] = base64.StdEncoding.EncodeToString(marshled)
	fmt.Println(err, "receiver marshled", string(marshled))

	res, _, err = ctx.CreateOrUpdate("alertmanagerconfig.yml.tpl", extras, func(_goalObj, existingObj runtime.Object) error {
		existing := existingObj.(*monitoringv1beta1.AlertManagerConfig)
		fmt.Println(existing)
		return nil
	})
	fmt.Println("created alertmanager", err)
	return res, err
}
